    </EmbeddedResource>
    <EmbeddedResource Update="Presentation\Views\Scenarios\ScenariosSectionView.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
  </ItemGroup>

  <Import Project="..\AssemblyInfo.targets" />

