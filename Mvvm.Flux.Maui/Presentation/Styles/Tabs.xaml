<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>

<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:sho="http://sharpnado.com">

    <Style TargetType="sho:BottomTabItem">
        <Setter Property="SelectedTabColor" Value="{StaticResource PrimaryDarkColor}" />
        <Setter Property="UnselectedLabelColor" Value="{StaticResource PrimaryLightColor}" />
        <Setter Property="UnselectedIconColor" Value="{StaticResource PrimaryLightColor}" />
        <Setter Property="FontFamily" Value="Regular" />
        <Setter Property="LabelSize" Value="12" />
        <Setter Property="IconSize" Value="20" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="IsTextVisible" Value="True" />
    </Style>

    <Style TargetType="sho:SegmentedTabItem">
        <Setter Property="SelectedLabelColor" Value="{StaticResource TextPrimaryDarkColor}" />
        <Setter Property="UnselectedLabelColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="SelectedTabColor" Value="{StaticResource PrimaryColor}" />
        <Setter Property="FontFamily" Value="FontBold" />
        <Setter Property="LabelSize" Value="{StaticResource TextSizeSubhead}" />
    </Style>

</ResourceDictionary>
