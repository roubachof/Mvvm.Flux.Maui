    <None Remove="Presentation\Fonts\OpenSans-Regular.ttf" />
    <None Remove="Presentation\Fonts\OpenSans-SemiBold.ttf" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Presentation\Fonts\fa_5_pro_regular.otf" />
    <EmbeddedResource Include="Presentation\Fonts\fa_5_pro_solid.otf" />
    <EmbeddedResource Include="Presentation\Fonts\OpenSans-Bold.ttf" />
